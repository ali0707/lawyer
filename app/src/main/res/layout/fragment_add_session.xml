<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Session.Add_session">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/back">

        <EditText
            android:id="@+id/date_Session"
            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="12dp"
            android:drawableRight="@drawable/add"
            android:background="@drawable/ic_textinput"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="تاريخ الجلسة"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.609"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/colortext"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/deg1"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:drawableLeft="@drawable/more"
            android:drawableRight="@drawable/ic_cale"
            android:drawablePadding="5dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/ic_textinput"

            android:hint=" موضوع"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            android:textColor="@color/colortext"
            />

        <EditText
            android:id="@+id/deg3"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:drawableLeft="@drawable/more"
            android:drawableRight="@drawable/ic_format"
            android:drawablePadding="5dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/ic_textinput"

            android:hint=" ملاحظة"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            android:textColor="@color/colortext"
            />
        <EditText
            android:id="@+id/deg4"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:drawableLeft="@drawable/more"
            android:drawableRight="@drawable/ic_gavel2"
            android:drawablePadding="5dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/ic_textinput"
            android:hint="أحكام تحضيرية"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            android:textColor="@color/colortext"
            />

        <Button
            android:id="@+id/button_Session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="51.5dp"
            android:layout_marginEnd="51.5dp"
            android:layout_marginTop="57.5dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bgr_btn"
            android:text="إضافة"
            android:textColor="@color/yellow"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </LinearLayout>

</ScrollView>